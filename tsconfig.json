{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist/server",
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "files": [
    "src/cli.ts",
    "src/global.d.ts"
  ], 
  "include": ["src/**/*.ts", "src/**/*.d.ts", "node_modules/imagetracerjs/**/*"]
}
